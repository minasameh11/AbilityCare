@model ChurchService.Models.Person
@{
    ViewData["Title"] = "تأكيد الحذف";
}

<div class="container mt-5">
    <div class="card shadow p-4 rounded-3 text-center">
        <h3 class="text-danger mb-3">⚠️ هل أنت متأكد من حذف هذا الشخص؟</h3>

        <img src="@(string.IsNullOrEmpty(Model.PhotoPath) ? "/images/default-avatar.png" : Model.PhotoPath)"
             class="rounded-circle mb-3"
             alt="صورة الشخص"
             style="width:130px;height:130px;object-fit:cover;" />

        <h4 class="fw-bold">@Model.FullName</h4>
        <p class="text-muted">@Model.Area @if (!string.IsNullOrEmpty(Model.NationalId))
            {
                <span>• @Model.NationalId</span>
            }</p>

        <div class="card p-3 mt-3">
            <p><strong>النوع:</strong> @Model.Gender</p>
            <p><strong>نوع الإعاقة:</strong> @Model.DisabilityType</p>
        </div>

        <form asp-action="Delete" method="post" class="mt-3">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger px-4 me-2">🗑️ تأكيد الحذف</button>
            <a asp-action="Index" class="btn btn-secondary px-4">إلغاء</a>
        </form>
    </div>
</div>
