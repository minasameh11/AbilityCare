@model ChurchService.Models.Person
@{
    ViewData["Title"] = "تفاصيل الشخص";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <div class="row align-items-center">
            <!-- صورة الشخص -->
            <div class="col-md-4 text-center mb-4 mb-md-0">
                <div class="position-relative">
                    <img src="@(string.IsNullOrEmpty(Model.PhotoPath) ? "/images/default-avatar.png" : Model.PhotoPath)"
                         alt="صورة الشخص"
                         class="rounded-circle shadow-sm border border-3 border-primary"
                         style="width: 200px; height: 200px; object-fit: cover;" />
                </div>
                <h4 class="mt-3 text-primary fw-bold">@Model.FullName</h4>
            </div>

            <!-- بيانات الشخص -->
            <div class="col-md-8">
                <h5 class="text-secondary fw-bold mb-3">📋 البيانات الأساسية</h5>
                <div class="row">
                    <div class="col-sm-6 mb-2">
                        <strong>🆔 الرقم القومي:</strong>
                        <div>@Model.NationalId</div>
                    </div>

                    <div class="col-sm-6 mb-2">
                        <strong>🎂 تاريخ الميلاد:</strong>
                        <div>
                            @Model.BirthDate?.ToString("yyyy-MM-dd")
                            @{
                                if (Model.BirthDate.HasValue)
                                {
                                    var now = DateTime.Now;
                                    var ageYears = now.Year - Model.BirthDate.Value.Year;
                                    var ageMonths = now.Month - Model.BirthDate.Value.Month;
                                    if (ageMonths < 0)
                                    {
                                        ageYears--;
                                        ageMonths += 12;
                                    }
                                    <span class="text-muted">(@ageYears سنة و @ageMonths شهر)</span>
                                    ;
                                }
                            }
                        </div>
                    </div>

                    <div class="col-sm-6 mb-2">
                        <strong>👤 النوع:</strong>
                        <div>@Model.Gender</div>
                    </div>

                    <div class="col-sm-6 mb-2">
                        <strong>📍 المنطقة:</strong>
                        <div>@Model.Area</div>
                    </div>

                    <div class="col-sm-12 mb-2">
                        <strong>🏠 العنوان:</strong>
                        <div>@Model.Address</div>
                    </div>

                    <div class="col-sm-6 mb-2">
                        <strong>♿ نوع الإعاقة:</strong>
                        <div>@Model.DisabilityType</div>
                    </div>

                    <div class="col-sm-6 mb-2">
                        <strong>📊 درجة الإعاقة:</strong>
                        <div>@Model.DisabilityDegree</div>
                    </div>

                    <div class="col-sm-12 mb-2">
                        <strong>📞 1 رقم الموبايل:</strong>
                        <div>@Model.Phone1</div>
                    </div>

                    <div class="col-sm-12 mb-2">
                        <strong>📞 2 رقم الموبايل:</strong>
                        <div>@Model.Phone2</div>
                    </div>

                    <div class="col-sm-12 mt-3">
                        <strong>📝 ملاحظات:</strong>
                        <div class="border rounded p-2 bg-light">@Model.Notes</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- جدول الاجتماعات -->
        @if (Model.Attendances != null && Model.Attendances.Any())
        {
            var total = Model.Attendances.Count();
            var present = Model.Attendances.Count(a => a.IsPresent);
            var absent = total - present;
            var presentPercent = total > 0 ? (present * 100 / total) : 0;

            <div class="card mt-4 shadow-sm border-0" style="border-radius: 12px;">
                <div class="card-header bg-primary text-white text-center fw-bold" style="border-radius: 12px 12px 0 0;">
                    🧾 سجل الاجتماعات
                </div>
                <div class="card-body">
                    <div class="row text-center mb-3">
                        <div class="col">
                            <span class="fw-bold">إجمالي الاجتماعات:</span> @total
                        </div>
                        <div class="col text-success">
                            <span class="fw-bold">الحضور:</span> @present
                        </div>
                        <div class="col text-danger">
                            <span class="fw-bold">الغياب:</span> @absent
                        </div>
                        <div class="col">
                            <span class="fw-bold text-primary">نسبة الحضور:</span> @presentPercent %
                        </div>
                    </div>

                    <table class="table table-striped table-hover align-middle text-center">
                        <thead class="table-light">
                            <tr>
                                <th>📅 تاريخ الاجتماع</th>
                                <th>📍 اسم الاجتماع</th>
                                <th>🎯 الحالة</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var attendance in Model.Attendances.OrderByDescending(a => a.Meeting.Date))
                            {
                                <tr>
                                    <td>@attendance.Meeting?.Date.ToString("yyyy/MM/dd")</td>
                                    <td>@attendance.Meeting?.Name</td>
                                    <td>
                                        @if (attendance.IsPresent)
                                        {
                                            <span class="badge bg-success">حضر ✅</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">غاب ❌</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info mt-4 text-center">
                لا توجد بيانات اجتماعات بعد لهذا الشخص.
            </div>
        }

        <!-- أزرار التحكم -->
        <div class="mt-4 text-center">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4 me-2">✏️ تعديل</a>
            <a asp-action="Index" class="btn btn-secondary px-4">رجوع</a>
        </div>
    </div>
</div>
