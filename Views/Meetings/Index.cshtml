@model IEnumerable<ChurchService.Models.Meeting>

<div class="container mt-4">
    <h3 class="text-center mb-4">📅 قائمة الاجتماعات</h3>

    <a asp-action="Create" class="btn btn-primary mb-3">➕ اجتماع جديد</a>

    <table class="table table-striped table-bordered text-center align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>الاسم</th>
                <th>التاريخ</th>
                <th>الخيارات</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Date.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">
                            🔍 تفاصيل
                        </a>
                        <a asp-controller="Attendance" asp-action="Mark" asp-route-meetingId="@item.Id" class="btn btn-success btn-sm">
                            📝 تسجيل الحضور
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                            ✏️ تعديل
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            🗑️ حذف
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
